generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique @db.VarChar(25)
  password String
  blocks   Block[] @relation(name: "userCreatedBlocks")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Block {
  id             Int       @id @default(autoincrement())
  owner          User      @relation(name: "userCreatedBlocks", fields: [ownerId], references: [id])
  ownerId        Int
  name           String
  type           BlockType
  parentFolder   Block?    @relation(name: "parentChildren", fields: [parentFolderId], references: [id])
  parentFolderId Int?
  children       Block[]   @relation(name: "parentChildren")
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  contentType    String?
  fileUrl        String?
  sizeInBytes    Int?

  @@index([ownerId, type, name])
}

enum BlockType {
  FILE
  FOLDER
  ROOT
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["typedSql"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id       String  @id @default(uuid())
  username String  @unique @db.VarChar(25)
  password String
  blocks   Block[] @relation(name: "userCreatedBlocks")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model Block {
  id             String    @id @default(uuid())
  owner          User      @relation(name: "userCreatedBlocks", fields: [ownerId], references: [id])
  ownerId        String
  name           String
  type           BlockType
  parentFolder   Block?    @relation(name: "parentChildren", fields: [parentFolderId], references: [id], onDelete: Cascade)
  parentFolderId String?
  children       Block[]   @relation(name: "parentChildren")
  uploadTime     DateTime?
  deletionTime   DateTime?
  updatedAt      DateTime  @updatedAt
  contentType    String?
  storePath      String?
  sizeInBytes    Int?

  @@index([ownerId, type, name])
}

enum BlockType {
  FILE
  FOLDER
  ROOT
}
